
@{
    ViewBag.Title = "Gửi tin nhắn";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

@model DACN_ver_2.Models.THONGBAO
<div class="right_col" role="main">
    <div class="">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <h2>Gửi tin nhắn</h2>
                    @using (Html.BeginForm("GuiThongBao", "Nhanvien", new { @strURL = Request.Url.ToString() }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                            <div class="form-group">
                                <div class="col-md-5">

                                    @Html.DropDownList("Nhanvien3", null, null, new { @class = "form-control" })

                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-5">

                                    @Html.TextAreaFor(model => model.NOIDUNG, new { @class = "form-control", rows = "5" })
                                    @Html.ValidationMessageFor(model => model.NOIDUNG, "", new { @class = "text-danger" })

                                </div>
                            </div>

                            <div class="form-group">
                                @*@Html.LabelFor(model => model.NOIDUNG, htmlAttributes: new { @class = "control-label col-md-2" })*@
                                <div class="col-md-10">
                                    <input type="submit" value="Sent" class="btn btn-default" />
                                </div>
                            </div>

                        </div>

                    }

                    <div class="col-md-10 col-sm-10 col-xs-10">
                        @Html.Action("HienTB", "Nhanvien")
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

