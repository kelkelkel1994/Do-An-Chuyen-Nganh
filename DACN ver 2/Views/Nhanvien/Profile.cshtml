                            <div class="x_content">
                                <h3>@Html.DisplayFor(model => model.TENNV)</h3>
                                <ul class="list-unstyled user_data">
                                    <li>
                                        <i class="fa fa-map-marker user-profile-icon"></i>  @Html.DisplayFor(model => model.DIACHI)
