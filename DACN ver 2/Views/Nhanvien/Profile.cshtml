                                    <li>
                                        <i class="fa fa-briefcase user-profile-icon"></i>  @Html.DisplayFor(model => model.LOAINHANVIEN.TEN)
                                    </li>
                                    <li>
                                        <i class="fa fa-briefcase user-profile-icon"></i>  Bộ phận: @Html.DisplayFor(model => model.PHONGBAN.TEN)
