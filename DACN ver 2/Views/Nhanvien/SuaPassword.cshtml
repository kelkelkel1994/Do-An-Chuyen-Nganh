@model DACN_ver_2.Models.NHANVIEN

@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="right_col" role="main">
    <div class="">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Đổi mật khẩu @*<small>năm @DateTime.Now.Year</small>*@</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a href="#">Settings 1</a>
                                    </li>
                                    <li>
                                        <a href="#">Settings 2</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        @using (Html.BeginForm())
                        {
                            <div class="form-group col-md-12">
                                @Html.Label("Mật khẩu cũ: ", htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-5">
                                    @Html.TextBox("OldPass", null, new { @class = "form-control", @type = "password" })
                                    @ViewData["ErrorOldPass"]
                                </div>
                            </div>
                            <div class="form-group col-md-12">
                                @Html.Label("Mật khẩu mới: ", htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-5">
                                    @Html.TextBox("NewPass", null, new { @class = "form-control", @type = "password" })
                                    @ViewData["ErrorNewPass"]
                                </div>
                            </div>
                            <div class="form-group col-md-12">
                                @Html.Label("Nhập lại mật khẩu: ", htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-5">
                                    @Html.TextBox("ReNewPass", null, new { @class = "form-control", @type = "password" })
                                    @ViewData["ErrorReNewPass"]
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save" class="btn btn-default" />
                                </div>
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
