@model IEnumerable<DACN_ver_2.Models.HOPDONG>

@{
    ViewBag.Title = "Danh sách hợp đồng";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}



<div class="right_col" role="main">
    <div class="">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>
                            Danh sách hợp đồng | <button type="button" class="btn btn-default" data-toggle="modal" data-target=".them-khach-hang"><i class="glyphicon glyphicon-plus"></i></button>
                        </h2>
                        @*<ul class="nav navbar-right panel_toolbox">
                                <li>
                                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                                <li>
                                    <a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>*@
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table id="datatable-buttons" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Thông tin hợp đồng</th>
                                    <th>Thông tin khách hàng</th>
                                    <th>Tác vụ</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.ID_HOPDONG)</td>
                                        <td>
                                            <div class="row">
                                                <label class="control-label col-md-6 col-sm-3 col-xs-12">
                                                    Số hợp đồng:
                                                </label>
                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    @if (item.SOHD == null)
                                                    {
                                                        <p>-/-</p>
                                                    }
                                                    else
                                                    {
                                                        @Html.DisplayFor(modelItem => item.SOHD)
                                                    }
                                                </div>
                                            </div>
                                            <div class="row">
                                                <label class="control-label col-md-6 col-sm-3 col-xs-12">
                                                    Loại HĐ:
                                                </label>
                                                <div class="col-md-6 col-sm-6 col-xs-12">

                                                    @Html.DisplayFor(modelItem => item.LOAIHOPDONG.TEN)

                                                </div>
                                            </div>
                                            <div class="row">
                                                <label class="control-label col-md-6 col-sm-3 col-xs-12">
                                                    PYC số:
                                                </label>
                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    @if (item.PHIEUYEUCAU.SOPYC == null)
                                                    {
                                                        <p>-/-</p>
                                                    }
                                                    else
                                                    {
                                                        @Html.DisplayFor(modelItem => item.PHIEUYEUCAU.SOPYC)
                                                    }
                                                </div>
                                            </div>
                                            <div class="row">
                                                <label class="control-label col-md-6 col-sm-3 col-xs-12">
                                                    Giá trị hợp đồng:
                                                </label>
                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    @(item.TONGTIEN.HasValue ? item.TONGTIEN.Value.ToString("N0") : "-/-")
                                                </div>
                                            </div>
                                            <div class="row">
                                                <label class="control-label col-md-6 col-sm-3 col-xs-12">
                                                    Ngày ký:
                                                </label>
                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    @if (item.NGAYLAP == null)
                                                    {
                                                        <p>-/-</p>
                                                    }
                                                    else
                                                    {
                                                        @Html.DisplayFor(modelItem => item.NGAYLAP)
                                                    }
                                                </div>
                                            </div>

                                        </td>
                                        <td>
                                            <div class="row">
                                                <label class="control-label col-md-6 col-sm-3 col-xs-12">
                                                    Họ và tên:
                                                </label>
                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    @if (item.PHIEUYEUCAU.KHACHHANG.TENKH == null)
                                                    {
                                                        <p>-/-</p>
                                                    }
                                                    else
                                                    {
                                                        @Html.DisplayFor(modelItem => item.PHIEUYEUCAU.KHACHHANG.TENKH)
                                                    }
                                                </div>
                                            </div>
                                            <div class="row">
                                                <label class="control-label col-md-6 col-sm-3 col-xs-12">
                                                    Địa chỉ:
                                                </label>
                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    @if (item.PHIEUYEUCAU.KHACHHANG.DIACHI == null)
                                                    {
                                                        <p>-/-</p>
                                                    }
                                                    else
                                                    {
                                                        @Html.DisplayFor(modelItem => item.PHIEUYEUCAU.KHACHHANG.DIACHI)
                                                    }
                                                </div>
                                            </div>
                                            <div class="row">
                                                <label class="control-label col-md-6 col-sm-3 col-xs-12">
                                                    CMND số:
                                                </label>
                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    @if (item.PHIEUYEUCAU.KHACHHANG.CMND == null)
                                                    {
                                                        <p>-/-</p>
                                                    }
                                                    else
                                                    {
                                                        @Html.DisplayFor(modelItem => item.PHIEUYEUCAU.KHACHHANG.CMND)
                                                    }
                                                </div>
                                            </div>
                                            <div class="row">
                                                <label class="control-label col-md-6 col-sm-3 col-xs-12">
                                                    Điện thoại:
                                                </label>
                                                <div class="col-md-6 col-sm-6 col-xs-12">
                                                    @if (item.PHIEUYEUCAU.KHACHHANG.DIENTHOAI == null)
                                                    {
                                                        <p>-/-</p>
                                                    }
                                                    else
                                                    {
                                                        @Html.DisplayFor(modelItem => item.PHIEUYEUCAU.KHACHHANG.DIENTHOAI)
                                                    }
                                                </div>
                                            </div>
                                            <div class="ln_solid"></div>
                                            <div class="row">
                                                    <label class="control-label col-md-12 col-sm-12 col-xs-12">
                                                        Xem KH | Sửa KH 
                                                    </label>
                                            </div>

                                        </td>
                                        <td>
                                            @Html.ActionLink("Xem", "XemCTHopDdong", new { id = item.ID_HOPDONG }) |

                                            <a href='#' class="btn btn-danger btn-delete" data-toggle="modal" data-target=".xoakh-@item.ID_HOPDONG"><i class="glyphicon glyphicon-trash"></i></a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scriptsdata {
    <script>
        $(document).ready(function () {
            var handleDataTableButtons = function () {
                if ($("#datatable-buttons").length) {
                    $("#datatable-buttons").DataTable({
                        dom: "Bfrtip",
                        buttons: [
                          {
                              extend: "copy",
                              className: "btn-sm"
                          },
                          {
                              extend: "csv",
                              className: "btn-sm"
                          },
                          {
                              extend: "excel",
                              className: "btn-sm"
                          },
                          {
                              extend: "pdfHtml5",
                              className: "btn-sm"
                          },
                          {
                              extend: "print",
                              className: "btn-sm"
                          },
                        ],
                        responsive: true
                    });
                }
            };

            TableManageButtons = function () {
                "use strict";
                return {
                    init: function () {
                        handleDataTableButtons();
                    }
                };
            }();

            $('#datatable').dataTable();

            $('#datatable-keytable').DataTable({
                keys: true
            });

            $('#datatable-responsive').DataTable();

            $('#datatable-scroller').DataTable({
                ajax: "js/datatables/json/scroller-demo.json",
                deferRender: true,
                scrollY: 380,
                scrollCollapse: true,
                scroller: true
            });

            $('#datatable-fixed-header').DataTable({
                fixedHeader: true
            });

            var $datatable = $('#datatable-checkbox');

            $datatable.dataTable({
                'order': [[1, 'asc']],
                'columnDefs': [
                  { orderable: false, targets: [0] }
                ]
            });
            $datatable.on('draw.dt', function () {
                $('input').iCheck({
                    checkboxClass: 'icheckbox_flat-green'
                });
            });

            TableManageButtons.init();
        });
    </script>
}
