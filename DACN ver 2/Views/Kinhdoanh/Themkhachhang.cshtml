@model DACN_ver_2.Models.KHACHHANG

@using (Html.BeginForm("Themkhachhang", "Kinhdoanh"))
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">
                    Khách hàng:
                </label>
                <div class="col-md-8 col-sm-6 col-xs-12">
                    @Html.EditorFor(model => model.TENKH, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12" } })
                    @*<input type="text" id="last-name" name="last-name" required="required" class="form-control col-md-7 col-xs-12">*@
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">
                    Địa chỉ:
                </label>
                <div class="col-md-8 col-sm-6 col-xs-12">
                    @Html.EditorFor(model => model.DIACHI, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12" } })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">
                    Điện thoại:
                </label>
                <div class="col-md-3 col-sm-3 col-xs-12">
                    @Html.EditorFor(model => model.DIENTHOAI, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12" } })
                </div>
                <label class="control-label col-md-2 col-sm-3 col-xs-12">
                    Email:
                </label>
                <div class="col-md-3 col-sm-3 col-xs-12">
                    @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12" } })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">
                    Người đại diện:
                </label>
                <div class="col-md-3 col-sm-3 col-xs-12">
                    @Html.EditorFor(model => model.NGUOIDAIDIEN, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12" } })
                </div>
                <label class="control-label col-md-2 col-sm-3 col-xs-12">
                    Chức vụ:
                </label>
                <div class="col-md-3 col-sm-3 col-xs-12">
                    @Html.EditorFor(model => model.CHUCVU, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12" } })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">
                    Người giới thiệu:
                </label>
                <div class="col-md-8 col-sm-6 col-xs-12">
                    @Html.EditorFor(model => model.NGUON, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12" } })
                </div>
            </div>

        </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
        <input type="submit" value="Tạo" class="btn btn-primary" />
    </div>
}

