@model IEnumerable<DACN_ver_2.Models.KHACHHANG>

@{
    ViewBag.Title = "Danh sách khách hàng";
    Layout = "~/Views/Shared/_LayoutKinhdoanh.cshtml";
}

<div class="right_col" role="main">
    <div class="">
        @*<div class="page-title">
            <div class="title_left">
                <h3>Quản lý <small>Danh sách nhân viên AMAX</small></h3>
            </div>
        </div>

        <div class="clearfix"></div>*@

        <div class="row">

            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Danh sách khách hàng | <button type="button" class="btn btn-default" data-toggle="modal" data-target=".them-khach-hang"><i class="glyphicon glyphicon-plus"></i></button>
                        @Html.Action("Themkhachhang", "Kinhdoanh")
                        </h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table id="datatable-buttons" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Thông tin khách hàng</th>
                                    <th>Thông tin nguồn</th>
                                    <th>Ghi chú</th>
                                    <th>Tác vụ</th>
                                </tr>
                            </thead>


                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.ID_KH)</td>
                                        <td>
                                            <div class="row">
                                                <label class="control-label col-md-5 col-sm-3 col-xs-12">
                                                    Họ và tên:
                                                </label>
                                                <div class="col-md-7 col-sm-6 col-xs-12">
                                                    @if (item.TENKH == null)
                                                    {
                                                        <p>-/-</p>
                                                    }
                                                    else
                                                    {
                                                        @Html.DisplayFor(modelItem => item.TENKH)
                                                    }
                                                </div>
                                            </div>
                                            <div class="row">
                                                <label class="control-label col-md-5 col-sm-3 col-xs-12">
                                                    Địa chỉ:
                                                </label>
                                                <div class="col-md-7 col-sm-6 col-xs-12">
                                                    @if (item.DIACHI == null)
                                                    {
                                                        <p>-/-</p>
                                                    }
                                                    else
                                                    {
                                                        @Html.DisplayFor(modelItem => item.DIACHI)
                                                    }
                                                </div>
                                            </div>
                                            <div class="row">
                                                <label class="control-label col-md-5 col-sm-3 col-xs-12">
                                                    CMND số:
                                                </label>
                                                <div class="col-md-7 col-sm-6 col-xs-12">
                                                    @if (item.CMND == null)
                                                    {
                                                        <p>-/-</p>
                                                    }
                                                    else
                                                    {
                                                        @Html.DisplayFor(modelItem => item.CMND)
                                                    }
                                                </div>
                                            </div>
                                            <div class="row">
                                                <label class="control-label col-md-5 col-sm-3 col-xs-12">
                                                    Điện thoại:
                                                </label>
                                                <div class="col-md-7 col-sm-6 col-xs-12">
                                                    @if (item.DIENTHOAI == null)
                                                    {
                                                        <p>-/-</p>
                                                    }
                                                    else
                                                    {
                                                        @Html.DisplayFor(modelItem => item.DIENTHOAI)
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="row">
                                                <label class="control-label col-md-5 col-sm-3 col-xs-12">
                                                    Nguồn:
                                                </label>
                                                <div class="col-md-7 col-sm-6 col-xs-12">
                                                    @if (item.NGUON == null)
                                                    {
                                                        <p>-/-</p>
                                                    }
                                                    else
                                                    {
                                                        @Html.DisplayFor(modelItem => item.NGUON)
                                                    }
                                                </div>
                                            </div>
                                            <div class="row">
                                                <label class="control-label col-md-5 col-sm-3 col-xs-12">
                                                    Người đại diện:
                                                </label>
                                                <div class="col-md-7 col-sm-6 col-xs-12">
                                                    @if (item.NGUOIDAIDIEN == null)
                                                    {
                                                        <p>-/-</p>
                                                    }
                                                    else
                                                    {
                                                        @Html.DisplayFor(modelItem => item.NGUOIDAIDIEN)
                                                    }
                                                </div>
                                            </div>
                                            <div class="row">
                                                <label class="control-label col-md-5 col-sm-3 col-xs-12">
                                                    Chức vụ:
                                                </label>
                                                <div class="col-md-7 col-sm-6 col-xs-12">
                                                    @if (item.CHUCVU == null)
                                                    {
                                                        <p>-/-</p>
                                                    }
                                                    else
                                                    {
                                                        @Html.DisplayFor(modelItem => item.CHUCVU)
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            @if (item.NGAYSUA == null)
                                            {
                                                <p>Chưa sửa thông tin</p>
                                                <p>@Html.DisplayFor(modelItem => item.NGUOISUA)</p>
                                            }
                                            else
                                            {

                                                @Html.DisplayFor(modelItem => item.NGAYSUA) <br />
                                                @Html.DisplayFor(modelItem => item.NGUOISUA)
                                            }
                                        </td>
                                        <td>
                                            <a href='#' class="btn btn-primary btn-update" data-toggle="modal" data-target=".suakh-@item.ID_KH"><i class="glyphicon glyphicon-pencil"></i></a>
                                            <div class="modal fade suakh-@item.ID_KH" tabindex="-1" role="dialog" aria-hidden="true">
                                                <div class="modal-dialog modal-lg">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <button type="button" class="close" data-dismiss="modal">
                                                                <span aria-hidden="true">×</span>
                                                            </button>
                                                            <h4 class="modal-title" id="myModalLabel">Sửa phòng ban | ID = @item.ID_KH</h4>

                                                        </div>
                                                        @Html.Action("Suakhachhang", "Kinhdoanh", new { id = item.ID_KH })
                                                    </div>
                                                </div>
                                            </div>
                                            <a href='#' class="btn btn-danger btn-delete" data-toggle="modal" data-target=".xoakh-@item.ID_KH"><i class="glyphicon glyphicon-trash"></i></a>
                                            <div class="modal fade xoakh-@item.ID_KH" tabindex="-1" role="dialog" aria-hidden="true">
                                                <div class="modal-dialog modal-sm">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <button type="button" class="close" data-dismiss="modal">
                                                                <span aria-hidden="true">×</span>
                                                            </button>
                                                            <h4 class="modal-title" id="myModalLabel">Bạn có chắc muốn xoá? | ID: @item.ID_KH</h4>

                                                        </div>
                                                        @Html.Action("Xoakhachhang", "Kinhdoanh", new { id = item.ID_KH })
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section scriptsdata {
    <script>
        $(document).ready(function () {
            var handleDataTableButtons = function () {
                if ($("#datatable-buttons").length) {
                    $("#datatable-buttons").DataTable({
                        dom: "Bfrtip",
                        buttons: [
                          {
                              extend: "copy",
                              className: "btn-sm"
                          },
                          {
                              extend: "csv",
                              className: "btn-sm"
                          },
                          {
                              extend: "excel",
                              className: "btn-sm"
                          },
                          {
                              extend: "pdfHtml5",
                              className: "btn-sm"
                          },
                          {
                              extend: "print",
                              className: "btn-sm"
                          },
                        ],
                        responsive: true
                    });
                }
            };

            TableManageButtons = function () {
                "use strict";
                return {
                    init: function () {
                        handleDataTableButtons();
                    }
                };
            }();

            $('#datatable').dataTable();

            $('#datatable-keytable').DataTable({
                keys: true
            });

            $('#datatable-responsive').DataTable();

            $('#datatable-scroller').DataTable({
                ajax: "js/datatables/json/scroller-demo.json",
                deferRender: true,
                scrollY: 380,
                scrollCollapse: true,
                scroller: true
            });

            $('#datatable-fixed-header').DataTable({
                fixedHeader: true
            });

            var $datatable = $('#datatable-checkbox');

            $datatable.dataTable({
                'order': [[1, 'asc']],
                'columnDefs': [
                  { orderable: false, targets: [0] }
                ]
            });
            $datatable.on('draw.dt', function () {
                $('input').iCheck({
                    checkboxClass: 'icheckbox_flat-green'
                });
            });

            TableManageButtons.init();
        });
</script>
}