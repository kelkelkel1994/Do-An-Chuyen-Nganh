@model DACN_ver_2.Models.LOAITHONGTIN

@using (Html.BeginForm("ThemLoaithongtin", "Quanly"))
{
    @Html.AntiForgeryToken()
    <div class="modal-body">


        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-2" for="TEN">Tên: </label>
                <div class="col-md-10">
                    @Html.EditorFor(modelpb => modelpb.TEN, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(modelpb => modelpb.TEN, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="TEN">Loại tài sản: </label>
                <div class="col-md-10">
                    @Html.DropDownList("lts", null, "Chọn loại tài sản", new { @class = "form-control" })
                </div>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
        <input type="submit" value="Tạo" class="btn btn-primary" />
    </div>
}
