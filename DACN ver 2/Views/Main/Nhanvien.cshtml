@model IEnumerable<DACN_ver_2.Models.NHANVIEN>

@{
    ViewBag.Title = "Nhanvien";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}



<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Quản lý <small>Danh sách nhân viên AMAX</small></h3>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">

            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    @*<div class="x_title">
                        <h2>Danh sách sản phẩm theo <small>Users</small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>*@
                    <div class="x_content">
                        <table id="datatable-buttons" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Tên</th>
                                    <th>Phòng ban</th>
                                    <th>Loại nhân viên</th>
                                    <th>User</th>
                                    <th>Thông tin</th>
                                    <th>Đăng nhập lần cuối</th>
                                    <th>Hành động</th>
                                </tr>
                            </thead>


                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.ID_NHANVIEN)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TENNV)</td>
                                        <td>@Html.DisplayFor(modelItem => item.PHONGBAN.TEN)</td>
                                        <td>@Html.DisplayFor(modelItem => item.LOAINHANVIEN.TEN)</td>
                                        <td>@Html.DisplayFor(modelItem => item.USER)</td>
                                        <td>Địa chỉ: @Html.DisplayFor(modelItem => item.DIACHI) <br />
                                            Điện thoại: @Html.DisplayFor(modelItem => item.DIENTHOAI) <br />
                                            Email: @Html.DisplayFor(modelItem => item.EMAIL)
                                        </td>
                                        <td> 
                                        @if (item.NGAYSUA == null)
                                        {
                                            <p>Chưa đăng nhập</p>
                                        }
                                        else {

                                        @Html.DisplayFor(modelItem => item.NGAYSUA)
                                        }</td>
                                        <td>
                                            <a href='/Main/SuaNhanvien/@item.ID_NHANVIEN' class="btn btn-primary btn-update"><i class="glyphicon glyphicon-pencil"></i></a>
                                            <a href='/Main/XoaNhanvien/@item.ID_NHANVIEN' class="btn btn-danger btn-delete"><i class="glyphicon glyphicon-trash"></i></a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
