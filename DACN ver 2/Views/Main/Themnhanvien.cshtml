@model DACN_ver_2.Models.NHANVIEN
@{
    ViewBag.Title = "Menu";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="right_col" role="main">
    <div class="">


        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>
                            Thêm Nhân viên
                        </h2>
                        <div class="clearfix"></div>
                    </div>

                    @using (Html.BeginForm("Themnhanvien", "Main", FormMethod.Post, new { @class = "form-horizontal form-label-left" }))
                    {
                        @Html.AntiForgeryToken()
                        
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.Label("Họ và tên: ", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.TENNV, new { htmlAttributes = new { @class = "form-control" } })
                                    @ViewData["ErrorTen"]
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Địa chỉ: ", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.DIACHI, new { htmlAttributes = new { @class = "form-control" } })
                                    @ViewData["ErrorDiachi"]
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Điện thoại: ", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.DIENTHOAI, new { htmlAttributes = new { @class = "form-control" , @type ="number"} })
                                    @ViewData["ErrorDienthoai"]
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Email: ", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control" } })
                                    @ViewData["ErrorEmail"]
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Ngày bắt đầu làm", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.NGAYBATDAULAM, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                                    @ViewData["ErrorDate"]
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Phòng ban", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-8">
                                    @Html.DropDownList("Phongban2", null, "Chọn phòng ban", new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Loại nhân viên", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-8">
                                    @Html.DropDownList("Loainhanvien2", null, "Chọn loại nhân viên", new { @class = "form-control" })
                                </div>
                            </div>


                            <div class="form-group">
                                @Html.Label("Tên đăng nhập", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.USER, new { htmlAttributes = new { @class = "form-control" } })
                                    @ViewData["ErrorUser"]
                                </div>
                            </div>



                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Create" class="btn btn-default" />
                                </div>
                            </div>
                       
                    }

                </div>
            </div>
        </div>


    </div>
</div>

